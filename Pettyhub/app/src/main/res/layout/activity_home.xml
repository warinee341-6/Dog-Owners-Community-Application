<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#DDC0AE"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/search_txt"
        android:layout_width="303dp"
        android:layout_height="48dp"
        android:background="@drawable/searchview"
        android:ems="10"
        android:fontFamily="@font/jsfront"
        android:inputType="none"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:textColorHint="#D8AC9283"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jsfront"
        android:inputType="none"
        android:paddingLeft="5dp"
        android:text="Search"
        android:textColor="@color/brown"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/search_txt"
        app:layout_constraintEnd_toEndOf="@+id/search_txt"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/search_txt"
        app:layout_constraintVertical_bias="0.473" />


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="414dp"
        android:layout_height="157dp"
        android:contentDescription="@string/app_name"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_txt"
        app:layout_constraintVertical_bias="0.058">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/health"
                style="@style/my_Style"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/catagory_cart"
                app:srcCompat="@drawable/health" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/health"
                android:layout_alignStart="@id/health"
                android:layout_alignEnd="@id/health"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="-23dp"
                android:fontFamily="@font/jsfront"
                android:text="สุขภาพ"
                android:textColor="@color/brow_light"
                android:textSize="26sp" />

            <ImageView
                android:id="@+id/care"
                style="@style/my_Style"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/health"
                android:background="@drawable/catagory_cart"
                app:srcCompat="@drawable/carepet" />


            <TextView

                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/care"
                android:layout_alignStart="@id/care"
                android:layout_alignEnd="@id/care"
                android:layout_marginStart="9dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="-23dp"
                android:fontFamily="@font/jsfront"
                android:text="การดูแล"
                android:textColor="@color/brow_light"
                android:textSize="26sp" />

            <ImageView
                android:id="@+id/food"
                style="@style/my_Style"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/care"
                android:background="@drawable/catagory_cart"
                app:srcCompat="@drawable/food" />


            <TextView

                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/food"
                android:layout_alignStart="@id/food"
                android:layout_alignEnd="@id/food"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="-23dp"
                android:fontFamily="@font/jsfront"
                android:text="อาหาร"
                android:textColor="@color/brow_light"
                android:textSize="26sp" />

            <ImageView
                android:id="@+id/life_style"
                style="@style/my_Style"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/food"
                android:background="@drawable/catagory_cart"
                app:srcCompat="@drawable/life_style" />

            <TextView

                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/life_style"
                android:layout_alignStart="@id/life_style"
                android:layout_alignEnd="@id/life_style"
                android:layout_marginStart="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-23dp"
                android:fontFamily="@font/jsfront"
                android:text="ไลฟ์สไตล์"
                android:textColor="@color/brow_light"
                android:textSize="26sp" />
        </RelativeLayout>


    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="313dp"
        android:layout_marginBottom="372dp"
        android:fontFamily="@font/jsfront"
        android:text="รายการยอดฮิต"
        android:textColor="@color/brow_light"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/search_txt"
        app:layout_constraintEnd_toEndOf="@+id/search_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/search_txt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.855"
        app:srcCompat="@drawable/search" />

    <TextView
        android:id="@+id/txt_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jsfront"
        android:text="เรื่องน่ารู้"
        android:textColor="@color/brow_light"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/search_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.725" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recommend"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:listitem="@layout/reccomend_rv_item"/>


</androidx.constraintlayout.widget.ConstraintLayout>