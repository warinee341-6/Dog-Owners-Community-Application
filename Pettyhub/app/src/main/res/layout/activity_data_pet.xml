<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataPetActivity">

    <ImageView
        android:id="@+id/pet_img"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/white"
        android:hapticFeedbackEnabled="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/hiii" />

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/frame"
        android:backgroundTint="#BCFFFFFF"
        android:clickable="true"
        android:foregroundGravity="center"
        android:hapticFeedbackEnabled="true"
        android:padding="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/pet_img"
        app:layout_constraintStart_toStartOf="@+id/pet_img"
        app:layout_constraintTop_toTopOf="@+id/pet_img"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/frame"
        android:backgroundTint="#D6B097"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pet_img"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="60dp"
            android:fontFamily="@font/jsfront"
            android:text="Title...."
            android:textColor="@color/brow_light"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/pet_age"
            android:layout_width="168dp"
            android:layout_height="53dp"
            android:layout_below="@+id/title_txt"
            android:layout_alignBottom="@+id/pet_breed"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="-2dp"
            android:layout_toStartOf="@+id/pet_breed"
            android:fontFamily="@font/jsfront"
            android:text="age"
            android:textSize="22dp"
            android:textColor="@color/brow_light"
            />

        <TextView
            android:id="@+id/pet_breed"
            android:layout_width="186dp"
            android:layout_height="50dp"
            android:layout_below="@+id/title_txt"
            android:layout_alignEnd="@+id/title_txt"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/jsfront"
            android:text="breed"
            android:textSize="22dp"
            android:textColor="@color/brow_light"/>

        <TextView
            android:id="@+id/des_txt"
            android:layout_width="372dp"
            android:layout_height="379dp"
            android:layout_below="@+id/pet_breed"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/frame"
            android:backgroundTint="#FEFEFE"
            android:fontFamily="@font/jsfront"
            android:lineSpacingExtra="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:text="Please Enter Text"
            android:textColor="@color/brow_light"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/icon_category"
            android:layout_width="70dp"
            android:layout_height="63dp"
            android:layout_above="@+id/des_txt"
            android:layout_alignTop="@+id/title_txt"
            android:layout_alignEnd="@+id/des_txt"
            android:layout_marginTop="-7dp"
            android:layout_marginEnd="-12dp"
            android:layout_marginBottom="75dp"
            app:srcCompat="@drawable/dog" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>