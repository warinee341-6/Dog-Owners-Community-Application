<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/image_with_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- กรอบของรูปภาพ -->
    <item>
        <shape android:shape="oval">
            <!-- สีพื้นหลัง -->
            <solid android:color="@color/white"/>

            <!-- สีขอบ -->

            <stroke
                android:width="0dp"
                />
        </shape>
    </item>
    <!-- รูปภาพ -->
    <item android:drawable="@drawable/blind"
        android:top="120dp"
        android:bottom="120dp"
        android:left="120dp"
        android:right="120dp" />
</layer-list>
