<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- กรอบของรูปภาพ -->
    <item>
        <shape android:shape="oval">
            <!-- สีพื้นหลัง -->
            <solid android:color="@android:color/white" />
            <!-- สีขอบ -->
            <stroke
                android:width="15dp"
                android:color="@color/brow_light" />
        </shape>
    </item>
    <!-- รูปภาพ -->
    <item android:drawable="@drawable/baseline_arrow_forward_ios_100"
        android:top="70dp"
        android:bottom="70dp"
        android:left="70dp"
        android:right="70dp"/>
</layer-list>